{
  "manifest_version": 3,
  "name": "YouTube Shorts Blocker",
  "version": "1.0.0",
  "description": "YouTube Shortsを非表示にして、動画に集中できるようにします",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}